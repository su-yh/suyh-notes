<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">
<!-- mybatis 的核心配置文件 -->
<configuration>
	<!-- 元素标签的约束顺序: properties?,settings?,typeAliases?,typeHandlers?,objectFactory?, 
		objectWrapperFactory?,reflectorFactory?,plugins?,environments?,databaseIdProvider?,mappers? -->
	<!-- properties 这个元素的位置需要注意，它的位置需要靠前一些 -->
	<properties resource="dbconfig.properties"></properties>
	<settings>
		<!-- 启用二级缓存(有的默认就是开启的) -->
		<setting name="cacheEnabled" value="true" />
		<!-- name="logImpl" 为约定值     value="log4j" 对应文件名 -->
		<setting name="logImpl" value="log4j"/>
	</settings>

	<!-- <typeAliases> <typeAlias type="com.project.sys.entity.SysUser" alias="sysUser"/> 
		</typeAliases> -->
	<typeAliases>
		<!-- 默认为包下面的类生成一个别名，别名为类名首字母小写 -->
		<package name="com.project.sys.entity" />
		<package name="com.project.sys.vo" />
	</typeAliases>

	<!-- 配置开发环境 -->
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" value="${driver}" />
				<property name="url" value="${url}" />
				<property name="username" value="${username}" />
				<property name="password" value="${password}" />
			</dataSource>
		</environment>
	</environments>
	<!-- 包含mapper 配置文件到这个配置标签中 -->
	<mappers>
		<mapper resource="mapper/SysUserMapper.xml" />
	</mappers>
</configuration>





